<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_alpha_215" />

    <TextView
        android:id="@+id/id_fg_detail_tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/white_alpha_230"
        android:textSize="16sp"
        tools:text="今天:" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:background="@color/white_alpha_215" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.sunrise"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_sunrise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="上午5:20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.sunset"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_sunset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="下午5:20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.rainfall.rate"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_rainfall_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="30%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.hum"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_hum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="89%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.wind.speed"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_wind_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="西南3米/秒" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.apparent.tmp"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_apparent_tmp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="33%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.precipitation"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_precipitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="0.0厘米" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.atmos.pressure"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_atmos_pressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="1,009百帕" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.visibility"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_visibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="9.7公里" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/des.detail.uv"
            android:textAlignment="textEnd"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_fg_detail_tv_uv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white_alpha_230"
            android:textSize="16sp"
            tools:text="0" />

    </LinearLayout>

</LinearLayout>